{
    "bsonType": "object",
    "properties": {
        "machineTypeId": {
            "bsonType": "string",
            "description": "Defines machine architracture and OS",
            "required": true
        },
        "software": {
            "bsonType": "array",
            "items": {
                "bsonType": "object",
                "properties": {
                    "name": {
                        "bsonType": "string",
                        "description": "Name of the softweare package",
                        "required": true
                    },
                    "versionCommand": {
                        "bsonType": "string",
                        "description": "command to get software version",
                        "required": true
                    },
                    "install": {
                        "bsonType": "array",
                        "items": {
                            "bsonType": "object",
                            "properties": {
                                "processName": {
                                    "bsonType": "string",
                                    "description": "unqiue Identifier of process"
                                },
                                "cmdSequence": {
                                    "bsonType": "array",
                                    "description": "List of command objects to installa the software ",
                                    "items": {
                                        "bsonType": "object",
                                        "properties": {
                                            "command": {
                                                "bsonType": "string",
                                                "description": "linux command to run",
                                                "required": true
                                            },
                                            "value": {
                                                "bsonType": "string",
                                                "description": "expected value printed to stdout"
                                            },
                                            "stderr": {
                                                "bsonType": "string",
                                                "description": "Expected output to stderr"
                                            },
                                            "returnCode": {
                                                "bsonType": "string",
                                                "description": "Expected system return code"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": "array of installatino options"
                    }
                }
            }
        }
    }
}